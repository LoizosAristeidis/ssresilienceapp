<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fg_reflect_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReflectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_purple"
        android:fillViewport="true"
        android:layoutDirection="ltr">

        <TextView
            android:id="@+id/fg_reflect_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            android:text="Στο τέλος της ημέρας..."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fg_reflect_question1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="150dp"
            android:text="Η ερώτηση 1 του επιλεγόμενου στόχου εμφανίζεται εδώ"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_reflect_title" />

        <ToggleButton
            android:id="@+id/fg_reflect_checkbox1"
            android:layout_width="275px"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:paddingStart="10px"
            android:paddingEnd="10px"
            android:scaleX="0.5"
            android:scaleY="0.65"
            android:textColor="@color/white"
            android:textOff="	"
            android:textOn="✓"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fg_reflect_question1"
            app:layout_constraintTop_toBottomOf="@+id/fg_reflect_title" />


        <TextView
            android:id="@+id/fg_reflect_question2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="150dp"
            android:text="Η ερώτηση 2 του επιλεγόμενου στόχου εμφανίζεται εδώ"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_reflect_question1" />

        <ToggleButton
            android:id="@+id/fg_reflect_checkbox2"
            android:layout_width="275px"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:paddingStart="10px"
            android:paddingEnd="10px"
            android:scaleX="0.5"
            android:scaleY="0.65"
            android:textColor="@color/white"
            android:textOff="	"
            android:textOn="✓"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fg_reflect_question2"
            app:layout_constraintTop_toBottomOf="@+id/fg_reflect_question1" />


        <TextView
            android:id="@+id/fg_reflect_question3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="150dp"
            android:text="Η ερώτηση 3 του επιλεγόμενου στόχου εμφανίζεται εδώ"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_reflect_question2" />

        <ToggleButton
            android:id="@+id/fg_reflect_checkbox3"
            android:layout_width="275px"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:paddingStart="10px"
            android:paddingEnd="10px"
            android:scaleX="0.5"
            android:scaleY="0.65"
            android:textColor="@color/white"
            android:textOff="	"
            android:textOn="✓"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fg_reflect_question3"
            app:layout_constraintTop_toBottomOf="@+id/fg_reflect_question2" />


        <TextView
            android:id="@+id/fg_reflect_question4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="150dp"
            android:text="Η ερώτηση 4 του επιλεγόμενου στόχου εμφανίζεται εδώ"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_reflect_question3" />

        <ToggleButton
            android:id="@+id/fg_reflect_checkbox4"
            android:layout_width="275px"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:paddingStart="10px"
            android:paddingEnd="10px"
            android:scaleX="0.5"
            android:scaleY="0.65"
            android:textColor="@color/white"
            android:textOff="	"
            android:textOn="✓"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fg_reflect_question4"
            app:layout_constraintTop_toBottomOf="@+id/fg_reflect_question3" />

        <Button
            android:id="@+id/fg_reflect_submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:background="@drawable/button_border"
            android:text="ΥΠΟΒΟΛΗ"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>