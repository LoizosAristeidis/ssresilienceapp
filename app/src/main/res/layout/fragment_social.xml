<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fg_social_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocialFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_purple"
        android:fillViewport="true"
        android:layoutDirection="ltr">

        <TextView
            android:id="@+id/fg_social_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:text="Share your progression"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/fg_social_facebook"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_social_title" />

        <Button
            android:id="@+id/fg_social_messenger"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/messenger"
            app:layout_constraintStart_toEndOf="@+id/fg_social_facebook"
            app:layout_constraintTop_toBottomOf="@+id/fg_social_title" />

        <Button
            android:id="@+id/fg_social_instagram"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/instagram"
            app:layout_constraintStart_toEndOf="@+id/fg_social_messenger"
            app:layout_constraintTop_toBottomOf="@+id/fg_social_title" />

        <Button
            android:id="@+id/fg_social_twitter"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/twitter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fg_social_instagram"
            app:layout_constraintTop_toBottomOf="@+id/fg_social_title" />

        <TextView
            android:id="@+id/fg_social_leaderboard_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="32dp"
            android:text="Connect with us on"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_social_instagram" />

        <Button
            android:id="@+id/fg_social_facebook_ssr"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_social_leaderboard_header" />

        <Button
            android:id="@+id/fg_social_messenger_ssr"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/messenger"
            app:layout_constraintStart_toEndOf="@+id/fg_social_facebook_ssr"
            app:layout_constraintTop_toBottomOf="@+id/fg_social_leaderboard_header" />

        <Button
            android:id="@+id/fg_social_instagram_ssr"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/instagram"
            app:layout_constraintStart_toEndOf="@+id/fg_social_messenger_ssr"
            app:layout_constraintTop_toBottomOf="@+id/fg_social_leaderboard_header" />

        <Button
            android:id="@+id/fg_social_twitter_ssr"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/twitter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fg_social_instagram_ssr"
            app:layout_constraintTop_toBottomOf="@+id/fg_social_leaderboard_header" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>